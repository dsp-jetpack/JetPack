{
   "name": "CSP",
   "sample_ini": "sample_csp_profile.ini",
   "associated_settings": [
      {
         "Dell NFV Settings": {
            "hpg_enable": {
               "valid_values": [
                  "true",
                  "false"
               ]
            },
            "hpg_size": {
               "valid_values": [
                  "2MB",
                  "1GB"
               ]
            },
            "numa_enable": {
               "valid_values": [
                  "true",
                  "false"
               ]
            },
            "numa_hostos_cpu_count": {
                 "valid_values": [
                   "2",
                   "4",
                   "6",
                   "8"
                ]
             },
            "ovs_dpdk_enable": {
                "valid_values": [
                   "true",
                   "false"
                ]
            }
	 },
	    "Performance and Optimization": {
