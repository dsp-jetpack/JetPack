    c_rbd_user = 'volumes'
    
    fence_ipmi_ip1 = 'CHANGEME_CONTROLLER1_IPMI_IP'
    fence_ipmi_ip2 = 'CHANGEME_CONTROLLER2_IPMI_IP'
    fence_ipmi_ip3 = 'CHANGEME_CONTROLLER3_IPMI_IP'
    fence_ipmi_lanplus = 'true'
    fence_ipmi_user = 'CHANGEME_IPMI_USER'
    fence_ipmi_password = 'CHANGEME_IPMI_PASSWORD'
    fence_type = 'fence_ipmilan'

    
    glance_be = 'rbd'
    rbd_spool = 'images'
    rbd_suser = 'images'

    # ephemeral storage: currently supports "rbd" (shared storage like Ceph) or "default" (local compute node storage)
    libvirt_image_type: rbd

    # external floating ip network pool e.g. "nova" 
    def_float_pool = 'nova'
    
    # must be 16 or 32 char key
    heat_auth_key = 'CHANGEME_16OR32_CHAR_HEAT_AUTH_KEY'
    heat_cfn_en = 'true'
    heat_cloudw_en = 'true'

    inc_cinder = 'true'
    inc_heat = 'true'


    # amqp_provider
    amqp_pro = 'rabbitmq'

    node_access_iface = 'CHANGEME_PRIVATE_API_INTERFACE_NAME'
    
    # neutron private/tenant interface (em2 or bond0.300, etc...)
    net_tenant_iface = 'CHANGEME_INTERNAL_NETWORK_INTERFACE_NAME'

    # neutron public/floating/l3 interface (em3 or bond0.301, etc...)
    net_l3_iface = 'CHANGEME_EXTERNAL_NETWORK_INTERFACE_NAME'

    l3_VRRP_enable = 'true'

    tenant_vlan_range = 'CHANGEME_VLAN_MIN:CHANGEME_VLAN_MAX'

    keystnrc = 'true'

